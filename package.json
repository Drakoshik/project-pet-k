{
  "name": "project-pet-k",
  "private": true,
  "scripts": {
    "dev:backend": "cd backend && npm run start",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "setup:backend": "cd backend && npm ci && npm run first:setup",
    "setup:frontend": "cd frontend && npm ci",
    "first:setup": "npm ci && npm-run-all --parallel setup:backend setup:frontend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
